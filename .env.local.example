# ==============================================
# PSYCHOLOGY CLINIC SAAS - ENVIRONMENT VARIABLES
# ==============================================

# Copy this file to .env.local and fill in the values
# cp .env.local.example .env.local

# ==================
# API CONFIGURATION
# ==================

# Backend API base URL (without trailing slash)
# Development: http://localhost:3001/api/v1
# Production: https://api.yourapp.com/api/v1
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1

# WebSocket URL for real-time features (optional)
# Development: ws://localhost:3001
# Production: wss://api.yourapp.com
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ==================
# APPLICATION
# ==================

# Application name (displayed in UI)
NEXT_PUBLIC_APP_NAME=Psychology Clinic SaaS

# Full application URL (for links, redirects, SEO)
# Development: http://localhost:3000
# Production: https://yourapp.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
# Options: development, production, staging
NEXT_PUBLIC_ENV=development

# ==================
# WEB PUSH NOTIFICATIONS
# ==================

# VAPID Public Key for Web Push notifications
# Generate with: npm install -g web-push && web-push generate-vapid-keys
# Use the "Public Key" value here
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key-here

# ==================
# FEATURE FLAGS
# ==================

# Enable analytics (Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional logs in console)
NEXT_PUBLIC_ENABLE_DEBUG=true

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# ==================
# THIRD-PARTY SERVICES (Optional)
# ==================

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Stripe publishable key (for payments)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ==================
# INTERNAL (Do not change unless necessary)
# ==================

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Token refresh buffer (in seconds before expiry)
NEXT_PUBLIC_TOKEN_REFRESH_BUFFER=300

# ==================
# NOTES
# ==================

# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never commit .env.local to version control
# 3. Use .env.production for production-specific values
# 4. Restart dev server after changing environment variables
